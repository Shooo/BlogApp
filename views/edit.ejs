<% include ./partials/header %>

	<div class="container">
		<h2>Edit Blog</h2>
		<div class="panel panel-default">
			<div class="panel-body">
				<form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
					<div class="form-group">
						<label for="">Title</label>
						<input type="text" class="form-control" name="blog[title]" value="<%= blog.title %>">
					</div>
					<div class="form-group">
						<label for="">Image</label>
						<input type="text" class="form-control" name="blog[image]" value="<%= blog.image%>">
					</div>
					<div class="form-group">
						<label for="">Body</label>
						<textarea class="form-control" name="blog[body]" placeholder="blog post" rows="16"><%= blog.body %></textarea>
					</div>
					<button type="submit" class="btn btn-primary">Submit</button>
				</form>
			</div>
		</div>
	</div>	

<% include ./partials/footer %>

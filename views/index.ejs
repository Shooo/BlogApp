<% include ./partials/header %>

<% blogs.forEach(function(blog){ %>
	<div class="container">
		<div class="row">
			<div class="span8">
				<div class="row">
					<div class="col-lg-12">
						<h4><strong><a href="/blogs/<%= blog._id %>"><%= blog.title %></a></strong></h4>
					</div>
				</div>
				<div class="row">
					<div class="col-lg-2">
						<a href="/blogs/<%= blog._id %>" class="thumbnail">
						  <img src="<%= blog.image %>" alt="">
						</a>
					</div>
					<div class="col-lg-10">      
						<p>
							<%- blog.body.substring(0,400) %>...
						</p>
						<a class="btn btn-primary btn-sm" href="/blogs/<%= blog._id %>">Read more</a>
					</div>
				</div>
			</div>
		</div>
		<hr>
	</div>

<% }) %>

<% include ./partials/footer %>